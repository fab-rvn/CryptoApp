{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./build",
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es5"
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"]
}
