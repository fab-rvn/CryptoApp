{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "paths": {
      "@/*": ["./src/*"],
      "@/test": ["./test/*"]
